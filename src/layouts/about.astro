---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.svelte';
import Nav from '../components/Nav.svelte';

const { content } = Astro.props;
---

<html lang={content.lang || 'en'}>
<head>
		<MainHead title="About | Stetson" description="About Stetson" />
		<style lang="scss">
			.heroImg {
				object-fit: cover;

				img {
					width: 100%;
					height: 100%;
				}
			}

			.bio {
				font-size: var(--f-u1);
				line-height: 2;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper mt8">
			<div class="heroImg">
				<img width="1400" height="350" src="https://images.unsplash.com/photo-1581977012607-4091712d36f9?auto=format&fit=crop&w=1400&h=350&q=75" />
			</div>
			<div class="bio wrapper wrapper__readable mt8">
        <slot />
			</div>
		</div>
		<Footer />
  </body>
</html>
